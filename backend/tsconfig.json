{
  "ts-node": {
    "files": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "paths": {
      "@small-mono-app/front/*": ["../front/*"],
      "@small-mono-app/shared/*": ["../shared/*"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "inlineSources": true,
    "isolatedModules": false,
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "es2022"
  },
  "include": ["src", "tree.test.ts"]
}
